<?xml version='1.0' ?>
<%
  # erb generation
  # https://bitbucket.org/osrf/gazebo_models/src/b237ea45262f51ff8d72aaa96ef19f1288723c42/cart_rigid_suspension/model.rsdf?at=default&fileviewer=file-view-default

  # Wheels
  wheel_mass = 10.0
  wheel_radius = 0.2
  wheel_thickness = 0.05

%>
<!-- THIS FILE IS GENERATED FROM wheel.rsdf -->

<sdf version='1.6'>
  <model name='Wheel'>
    <link name='y_dummy'>
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
      </inertial>
    </link>

    <link name='z_dummy'>
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
      </inertial>
    </link>

    <link name='wheel'>
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass><%= wheel_mass %></mass>
        <inertia>
          <ixx><%= 1.0/12.0*wheel_mass*(3.0*wheel_radius**2 + wheel_thickness**2) %></ixx>
          <iyy><%= 1.0/12.0*wheel_mass*(3.0*wheel_radius**2 + wheel_thickness**2) %></iyy>
          <izz><%= 1.0/2.0 * wheel_mass * wheel_radius**2 %></izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>

      <visual name='vis_wheel'>
        <pose>0 0 0 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius><%= wheel_radius %></radius>
            <length><%= wheel_thickness %></length>
          </cylinder>
        </geometry>
      </visual>
      <collision name='col_wheel'>
        <pose>0 0 0 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius><%= wheel_radius %></radius>
            <length><%= wheel_thickness %></length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <joint name='y' type='prismatic'>
      <pose>0 0 0 0 0 0</pose>
      <parent>world</parent>
      <child>y_dummy</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <effort>0.0</effort>
        </limit>
      </axis>
    </joint>

    <joint name='z' type='prismatic'>
      <pose>0 0 0 0 0 0</pose>
      <parent>y_dummy</parent>
      <child>z_dummy</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <effort>0.0</effort>
        </limit>
      </axis>
    </joint>

    <!--roll of the wheel-->
    <joint name='theta' type='revolute'>
      <!--With respect to child frame-->
      <pose>0 0 0 0 0 0</pose>
      <parent>z_dummy</parent>
      <child>wheel</child>
      <axis>
        <xyz>1.0 0 0</xyz>
        <!--<use_parent_model_frame>true</use_parent_model_frame>-->
      </axis>
    </joint>

  </model>
</sdf>
