<?xml version='1.0' ?>
<%
  #TODO:
  #- Fix minor wheel spin axis flipped
  #- Use erb generation
  #    https://bitbucket.org/osrf/gazebo_models/src/b237ea45262f51ff8d72aaa96ef19f1288723c42/cart_rigid_suspension/model.rsdf?at=default&fileviewer=file-view-default

  # Wheels
  wheel_mass = 10.0
  wheel_radius = 0.2
  wheel_thickness = 0.3

  # Major Link

  # Minor Link
%>
<!-- THIS FILE IS GENERATED FROM tribot.rsdf -->

<sdf version='1.6'>
  <model name='Tribot'>
    <link name='major_wheel'>
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass><%= wheel_mass %></mass>
        <inertia>
          <ixx><%= 1.0/12.0*wheel_mass*(3.0*wheel_radius**2 + wheel_thickness**2) %></ixx>
          <iyy><%= 1.0/12.0*wheel_mass*(3.0*wheel_radius**2 + wheel_thickness**2) %></iyy>
          <izz><%= 1.0/2.0 * wheel_mass * wheel_radius**2 %></izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>

      <visual name='vis_major_wheel_joint'>
        <pose>0 0 0 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius><%= wheel_radius %></radius>
            <length><%= wheel_thickness %></length>
          </cylinder>
        </geometry>
      </visual>
      <collision name='col_major_wheel_joint'>
        <pose>0 0 0 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius><%= wheel_radius %></radius>
            <length><%= wheel_thickness %></length>
          </cylinder>
        </geometry>
      </collision>

    </link>

    <link name='major_link'>
      <gravity>true</gravity>
      <self_collide>0</self_collide>
      <pose>0 0 0.5 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <!--TODO: Set correct inertial matrix for cylinder -->
      </inertial>

      <visual name='vis_cylinder'>
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>1</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name='col_cylinder'>
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>1</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name='vis_mid_joint'>
        <pose>0 0 0.5 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name='col_mid_joint'>
        <pose>0 0 0.5 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <link name='minor_link'>
      <gravity>true</gravity>
      <pose>0 0 1.25 0 0 0</pose>
      <self_collide>0</self_collide>
      <inertial>
        <mass>1.0</mass>
        <!--TODO: Set correct inertial matrix for cylinder -->
      </inertial>

      <visual name='vis_cylinder'>
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.5</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name='col_cylinder'>
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.5</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <link name='minor_wheel'>
      <pose>0 0 1.5 0 0 0</pose>
      <inertial>
        <mass><%= wheel_mass %></mass>
        <inertia>
          <ixx><%= 1.0/12.0*wheel_mass*(3.0*wheel_radius**2 + wheel_thickness**2) %></ixx>
          <iyy><%= 1.0/12.0*wheel_mass*(3.0*wheel_radius**2 + wheel_thickness**2) %></iyy>
          <izz><%= 1.0/2.0 * wheel_mass * wheel_radius**2 %></izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>

      <visual name='vis_major_wheel_joint'>
        <pose>0 0 0 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius><%= wheel_radius %></radius>
            <length><%= wheel_thickness %></length>
          </cylinder>
        </geometry>
      </visual>
      <collision name='col_major_wheel_joint'>
        <pose>0 0 0 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius><%= wheel_radius %></radius>
            <length><%= wheel_thickness %></length>
          </cylinder>
        </geometry>
      </collision>

    </link>

    <joint name='major_link_wheel_joint' type='revolute'>
      <!--With respect to child frame-->
      <pose>0 0 -0.5 0 0 0</pose>
      <parent>major_wheel</parent>
      <child>major_link</child>
      <axis>
        <xyz>1.0 0 0</xyz>
        <!--<use_parent_model_frame>true</use_parent_model_frame>-->
      </axis>
    </joint>

    <joint name='mid_joint' type='revolute'>
      <!--With respect to child frame-->
      <pose>0 0 -0.25 0 0 0</pose>
      <parent>major_link</parent>
      <child>minor_link</child>
      <axis>
        <xyz>1.0 0 0</xyz>
        <use_parent_model_frame>true</use_parent_model_frame>
      </axis>
    </joint>

    <joint name='minor_link_wheel_joint' type='revolute'>
      <!--With respect to child frame-->
      <pose>0 0 0 0 0 0</pose>
      <parent>minor_link</parent>
      <child>minor_wheel</child>
      <axis>
        <xyz>1.0 0 0</xyz>
        <!--<use_parent_model_frame>true</use_parent_model_frame>-->
      </axis>
    </joint>

  </model>
</sdf>
