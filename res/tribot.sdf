<?xml version='1.0' ?>
<sdf version='1.6'>
  <model name='Tribot'>
    <link name='cart'>
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>10.0</mass>
        <!-- For this model case, with the cart not having any rotational
             degrees of freedom, the values of the inertia matrix do not
             participate in the model. Therefore we just set them to zero
             (or near to zero since sdformat does not allow exact zeroes
             for inertia values). -->
        <inertia>
          <ixx>1.0e-20</ixx><iyy>1.0e-20</iyy><izz>1.0e-20</izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>

      <visual name='cart_visual'>
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.24 0.12 0.12</size>
          </box>
        </geometry>
      </visual>
    </link>

    <link name='major_link'>
      <self_collide>0</self_collide>
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <pose>0 0 0.5 0 0 0</pose>
        <mass>1.0</mass>
        <!-- A point mass has zero rotational inertia.
             We must specify small values since otherwise sdformat throws an
             exception. -->
      </inertial>

      <visual name='vis_cylinder'>
        <pose>0 0 0.5 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>1</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name='col_cylinder'>
        <pose>0 0 0.5 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>1</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name='vis_major_wheel_joint'>
        <pose>0 0 0 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.3</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name='col_major_wheel_joint'>
        <pose>0 0 0 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.3</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name='vis_mid_joint'>
        <pose>0 0 1 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name='col_mid_joint'>
        <pose>0 0 1 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <link name='minor_link'>
      <pose>0 0 1 0 0 0</pose>
      <self_collide>0</self_collide>
      <inertial>
        <pose>0 0 0.25 0 0 0</pose>
        <mass>10.0</mass>
      </inertial>

      <visual name='vis_cylinder'>
        <pose>0 0 0.25 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.5</length>
          </cylinder>
        </geometry>
      </visual>
      <collision name='col_cylinder'>
        <pose>0 0 0.25 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.5</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <joint name='major_link_wheel_joint' type='revolute'>
      <parent>cart</parent>
      <child>major_link</child>
      <axis>
        <xyz>1.0 0 0</xyz>
        <use_parent_model_frame>true</use_parent_model_frame>
        <limit>
          <effort>0.0</effort>
        </limit>
      </axis>
    </joint>

    <joint name='mid_joint' type='revolute'>
      <parent>major_link</parent>
      <child>minor_link</child>
      <axis>
        <xyz>1.0 0 0</xyz>
        <use_parent_model_frame>true</use_parent_model_frame>
        <limit>
          <effort>0.0</effort>
        </limit>
      </axis>
    </joint>

    <joint name='wheel_slider' type='prismatic'>
      <parent>world</parent>
      <child>cart</child>
      <axis>
        <xyz>0.0 1.0 0.0</xyz>
      </axis>
    </joint>

  </model>
</sdf>
